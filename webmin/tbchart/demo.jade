    - function randWord() {
        - var word = words[randNum(words.length - 1, 0)];
        - return word.charAt(0).toUpperCase() + word.toLowerCase().slice(1);
    - }
    - function randWords() {
    -   var words = [];
    -   for (var i = 0, m = randNum(1,3); i < m; i++) {
    -     words.push(randWord());
    -   }
    -   return words.join(' ');
    - }
    - function randNum(min, max) {
    -   return Math.floor(Math.random() * (max - min + 1)) + min;
    - }
    p.loading.alert Loading table...
    .table-container
      table.table.table-condensed.avails-table(cellpadding="0", cellspacing="0", border="0", class="table-bordered")
        thead
          tr
            th &nbsp;
            - for (var i = 1; i < cols; i++)
              th
                | #{randWords()}
                br
                span.line2 #{randWord()}, #{randWord().slice(0,2).toUpperCase()}
         tbody
            - for (var i = 0; i < rows; i++)
              tr
                - var d = new Date();
                - d.setDate(d.getDate()+i);
                td #{(d.getMonth() +1) + '/' + d.getDate() + '/' + d.getFullYear()}
                - for (var ii = 1; ii < cols; ii++) 
                  td
                    - var low = i-randNum(1,randNum(1,7))
                    - var high = i+randNum(1,randNum(1,7))
                    - if (ii <= high && ii >= low)
                      span.label(class='label-' + classes[randNum(classes.length -1, 0)])
                        | $#{(Math.random() * randNum(10, 10000)).toFixed(2)}
                    - else
                      | &nbsp;
                      
